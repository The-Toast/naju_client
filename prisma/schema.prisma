generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StampCategory {
  history
  museum
  event
  food
}

model User {
  id           String        @id @default(cuid())
  kakaoId      String        @unique
  email        String
  nickname     String
  profileImage String
  createdAt    DateTime      @default(now())
  stamps       StampRecord[] // 사용자가 찍은 스탬프 기록
}

model Stamp {
  id          String        @id @default(cuid())
  name        String
  description String
  location    String
  imageUrl    String?
  category    StampCategory
  records     StampRecord[]
}

model StampRecord {
  id     String @id @default(cuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  stamp   Stamp  @relation(fields: [stampId], references: [id])
  stampId String

  createdAt DateTime @default(now())
}
